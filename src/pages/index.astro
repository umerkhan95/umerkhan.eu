---
import BaseLayout from "../layouts/BaseLayout.astro";
import SideSection from "../components/SideSection.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
import { ModernHero } from "../components/react/ModernHero";
import { FadeIn } from "../components/react/FadeIn";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);

const experience = [
  { year: "2025", company: "Bloomers Berlin", role: "Founding Engineer", current: false, summary: "Built AI-powered e-commerce systems, GDPR-compliant RAG pipelines, and automation workflows with LangChain." },
  { year: "2024", company: "Comparado (Idealo)", role: "Data Engineer", current: false, summary: "Standardized ETL pipelines, migrated BI to AWS, and ensured DSA/DMA compliance for the Idealo Group." },
  { year: "2022", company: "CorAI", role: "Cloud Architect", current: false, summary: "Architected a system processing 1M daily news articles with NLP-based categorization and sentiment analysis." },
  { year: "2018", company: "Teradata", role: "Data Engineer", current: false, summary: "Built data pipelines and ETL solutions for major telecom companies including Telenor Pakistan." },
];

const clients = ["Idealo", "Axel Springer", "Bernstein Group", "NewsCatcher", "Telenor", "Bloomers"];
---

<BaseLayout sideBarActiveItemID="home">
  <ModernHero
    client:load
    name="Umer Khan"
    title="AI & Data Systems Engineer"
    description="I build production-grade AI systems. Specializing in RAG pipelines, LLM engineering, and turning complex automation into reliable tools."
    location="Berlin"
  />

  <div class="w-full h-px bg-base-300/50"></div>

  <!-- Experience Section -->
  <FadeIn client:load delay={0.2}>
    <SideSection title="Experience" subtitle={`${experience.length} roles`}>
      <div class="space-y-0">
        {experience.map((exp, index) => (
          <div class="group flex items-start gap-6 py-4 border-b border-base-300/30 last:border-0">
            <span class="text-sm font-medium w-16 shrink-0 pt-0.5 tabular-nums">
              {exp.current ? (
                <span class="text-success font-semibold">Now</span>
              ) : (
                <span class="text-base-content/40">{exp.year}</span>
              )}
            </span>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2.5">
                <span class="font-medium text-base-content group-hover:text-primary transition-colors">
                  {exp.company}
                </span>
                {exp.current && (
                  <span class="inline-flex items-center gap-1.5 px-2 py-0.5 text-[10px] font-medium bg-success/15 text-success rounded-full border border-success/25">
                    <span class="w-1 h-1 rounded-full bg-success animate-pulse"></span>
                    Active
                  </span>
                )}
              </div>
              <span class="text-sm text-base-content/50">{exp.role}</span>
              <p class="text-sm text-base-content/40 mt-1 line-clamp-2">{exp.summary}</p>
            </div>
          </div>
        ))}
      </div>
      <a
        href="/cv"
        class="inline-flex items-center gap-1.5 mt-6 text-sm font-medium text-base-content/60 hover:text-base-content transition-colors group"
      >
        View full resume
        <svg class="w-3.5 h-3.5 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </SideSection>
  </FadeIn>

  <div class="w-full h-px bg-base-300/50"></div>

  <!-- Blog Section -->
  <FadeIn client:load delay={0.3}>
    <SideSection title="Writing" subtitle={`${posts.length} articles`}>
      <div class="space-y-0">
        {last_posts.map((post) => (
          <a
            href={"/blog/" + createSlug(post.data.title, post.slug) + "/"}
            class="group flex items-start gap-6 py-4 border-b border-base-300/30 last:border-0"
          >
            <span class="text-xs text-base-content/40 w-16 shrink-0 pt-1 tabular-nums">
              {new Date(post.data.pubDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
            </span>
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-base-content group-hover:text-primary transition-colors line-clamp-1">
                {post.data.title}
              </h3>
              <p class="text-sm text-base-content/50 line-clamp-1 mt-0.5">
                {post.data.description}
              </p>
            </div>
            <svg class="w-4 h-4 text-base-content/20 group-hover:text-primary group-hover:translate-x-0.5 transition-all shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        ))}
      </div>
      <a
        href="/blog"
        class="inline-flex items-center gap-1.5 mt-6 text-sm font-medium text-base-content/60 hover:text-base-content transition-colors group"
      >
        View all posts
        <svg class="w-3.5 h-3.5 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </SideSection>
  </FadeIn>

  <div class="w-full h-px bg-base-300/50"></div>

  <!-- Clients Section -->
  <FadeIn client:load delay={0.4}>
    <SideSection title="Worked With" subtitle="Select clients">
      <div class="flex flex-wrap gap-2">
        {clients.map((client) => (
          <span class="px-3 py-1.5 text-sm text-base-content/70 bg-base-200/40 rounded-lg border border-base-300/40 hover:border-base-300 hover:bg-base-200/60 transition-all">
            {client}
          </span>
        ))}
      </div>
    </SideSection>
  </FadeIn>

  <div class="w-full h-px bg-base-300/50"></div>

  <!-- Contact Section -->
