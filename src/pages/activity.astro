---
import BaseLayout from "../layouts/BaseLayout.astro";
import SideSection from "../components/SideSection.astro";
import { fetchAllCommits, formatDate, formatTime, getRelativeDate } from "../lib/github";
import { TRACKED_REPOS } from "../config/repos";

const commitsByDate = await fetchAllCommits();
const dates = Object.keys(commitsByDate).sort((a, b) => b.localeCompare(a));
const totalCommits = dates.reduce((acc, date) => acc + commitsByDate[date].length, 0);
---

<BaseLayout title="Activity" sideBarActiveItemID="activity">
  <!-- Hero Section -->
  <section class="py-12">
    <div class="grid grid-cols-1 lg:grid-cols-[200px_1fr] gap-6 lg:gap-12">
      <div class="lg:text-right">
        <span class="text-xs font-semibold uppercase tracking-widest text-base-content/40">Changelog</span>
      </div>
      <div>
        <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-base-content mb-4">
          Activity
        </h1>
        <p class="text-base-content/60 leading-relaxed max-w-2xl mb-6">
          My coding activity across {TRACKED_REPOS.length} repositories. {totalCommits} commits tracked.
        </p>

        <!-- Tracked Repos -->
        <div class="flex flex-wrap gap-2">
          {TRACKED_REPOS.map((repo) => (
            <a
              href={`https://github.com/${repo}`}
              target="_blank"
              class="px-3 py-1 text-xs font-medium text-base-content/60 bg-base-200/50 rounded-lg border border-base-300/40 hover:border-base-300 hover:text-base-content transition-all"
            >
              {repo.split("/")[1]}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <div class="w-full h-px bg-base-300/50"></div>

  <!-- Commits List -->
  <SideSection title="Commits" subtitle={`${totalCommits} total`}>
    {dates.length === 0 ? (
      <div class="py-16 text-center">
        <p class="text-base-content/50">No commits found. Check back soon.</p>
      </div>
    ) : (
      <div class="space-y-8">
        {dates.map((date) => (
          <div>
            <!-- Date Header -->
            <div class="flex items-center gap-3 mb-4">
              <span class="text-sm font-semibold text-base-content">
                {formatDate(date)}
              </span>
              <span class="text-xs text-base-content/40">
                {getRelativeDate(date)}
              </span>
              <span class="flex-1 h-px bg-base-300/30"></span>
              <span class="text-xs text-base-content/40">
                {commitsByDate[date].length} {commitsByDate[date].length === 1 ? 'commit' : 'commits'}
              </span>
            </div>

            <!-- Commits for this date -->
            <div class="space-y-0">
              {commitsByDate[date].map((commit, index) => (
                <a
                  href={commit.url}
                  target="_blank"
                  class="group flex items-start gap-4 py-3 -mx-3 px-3 rounded-lg hover:bg-base-200/30 transition-colors"
                >
                  <!-- Timeline dot -->
                  <div class="flex flex-col items-center pt-1.5">
                    <span class="w-2 h-2 rounded-full bg-base-content/20 group-hover:bg-primary transition-colors"></span>
                    {index < commitsByDate[date].length - 1 && (
                      <span class="w-px h-8 bg-base-300/50 mt-1"></span>
                    )}
                  </div>

                  <!-- Commit content -->
                  <div class="flex-1 min-w-0 -mt-0.5">
                    <div class="flex items-start justify-between gap-3">
                      <p class="text-sm text-base-content group-hover:text-primary transition-colors line-clamp-2 leading-relaxed">
                        {commit.message}
                      </p>
                      <svg class="w-3.5 h-3.5 text-base-content/20 group-hover:text-primary group-hover:translate-x-0.5 transition-all flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </div>
                    <div class="flex items-center gap-3 mt-1.5">
                      <span class="inline-flex items-center gap-1.5 text-xs text-base-content/40">
                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
                        </svg>
                        {commit.repo}
                      </span>
                      <span class="text-xs text-base-content/30">·</span>
                      <span class="text-xs text-base-content/40 font-mono">
                        {commit.sha}
                      </span>
                      <span class="text-xs text-base-content/30">·</span>
                      <span class="text-xs text-base-content/40">
                        {formatTime(commit.date)}
                      </span>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    )}
  </SideSection>

  <!-- Footer -->
  <section class="py-10 border-t border-base-300/50">
    <div class="grid grid-cols-1 lg:grid-cols-[200px_1fr] gap-6 lg:gap-12">
      <div></div>
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <p class="text-sm text-base-content/50">
          Auto-updated on every deploy.
        </p>
        <a
          href="https://github.com/umerkhan95"
          target="_blank"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-base-content bg-base-200/50 rounded-lg border border-base-300/50 hover:bg-base-200 hover:border-base-300 transition-all"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View GitHub Profile
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
