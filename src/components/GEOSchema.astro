// Combine schemas based on page
const schemas = page === 'home'
  ? [personSchema, websiteSchema, professionalServiceSchema, faqSchema]
  : page === 'cv'
  ? [personSchema]
  : page === 'services'
  ? [personSchema, professionalServiceSchema]
  : [personSchema, websiteSchema];
---

<!-- JSON-LD Structured Data for LLMs and Search Engines -->
{schemas.map((schema) => (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
))}

